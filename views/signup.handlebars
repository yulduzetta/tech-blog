<div class="signup-container">
    <div class="row">
        <div class="col-md-offset-5 col-md-5 signup-form-wrapper">
            <div class="form-signup">
            <h4>Join us today!</h4>
            <input type="text" id="username-signup" class="form-control input-sm chat-input" placeholder="username" />
            <small id="usernamelHelp" class="form-text help-text">* Your username will be displayed on your posts.</small>
            </br>
            <input type="text" id="email-signup" class="form-control input-sm chat-input" placeholder="email" />
            <small id="emailHelp" class="form-text help-text">* We'll never share your email with anyone else.</small>
            </br>
            <input type="password" id="password-signup" class="form-control input-sm chat-input" placeholder="password" />
            <small id="passwordHelp" class="form-text help-text">* Password must be 6 characters long</small>
            </br>
            <div class="wrapper">
            <span class="group-btn">     
            <a href="#" class="btn btn-primary btn-md" id="signup">SIGN UP <i class="fas fa-user-plus"></i></a>
            </span>
            <a href="/login">Log in instead</a>
            </div>
            </div>        
        </div>
    </div>
</div>

<script src="/javascript/signup.js"></script>